<%= form_for(@proposal) do |f| %>
  <% if @proposal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@proposal.errors.count, "error") %> prohibited this proposal from being saved:</h2>

      <ul>
      <% @proposal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




  <div class="form-horizontal">
    <div class="field form-group">
      <%= f.label :lead_presenter, :class => 'control-label' %>
      <%= f.text_field :lead_presenter, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :co_presenter, 'Co-Presenter', :class => 'control-label' %>
      <%= f.text_field :co_presenter, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :email, :class => 'control-label' %>
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :school, :class => 'control-label' %>
      <%= f.select :school, [ 'University of Georgia', 'Virginia Tech', 'Auburn University', 'University of Tennessee', 'University of North Carolina (filler)' ], { :prompt => 'Choose a School' }, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :credentials, :class => 'control-label' %>
      <%= f.text_field :credentials, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :presentation_type, :class => 'control-label' %>

      <label class="radio-inline">
        <%= f.radio_button :presentation_type, 'Roundtable' %>Roundtable
      </label>

      <label class="radio-inline">
        <%= f.radio_button :presentation_type, 'Poster' %>Poster
      </label>

      <label class="radio-inline">
        <%= f.radio_button :presentation_type, 'Presentation' %>Presentation
      </label>
    </div>
    <div class="field form-group">
      <%= f.label :title, :class => 'control-label' %>
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :summary, :class => 'control-label' %>
      <%= f.text_area :summary, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :abstract, :class => 'control-label' %>
      <%= f.text_area :abstract, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      <%= f.label :additional_information, :class => 'control-label' %>
      <%= f.text_area :additional_information, :class => 'form-control' %>
    </div>
    <div class="actions form-group">
      <%= f.submit 'Submit Proposal', :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>


