<%= form_for(@registration) do |f| %>
  <% if @registration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@registration.errors.count, "error") %> prohibited this registration from being saved:</h2>

      <ul>
      <% @registration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-horizontal">
      <div class="field form-group">
        <%= f.label :name, :class => 'control-label' %>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :email, :class => 'control-label' %>
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :school, :class => 'control-label' %>
        <%= f.select :school, [ 'University of Georgia', 'Virginia Tech', 'Auburn University', 'University of Tennessee', 'University of North Carolina Greensboro' ], { :prompt => 'Choose a School' }, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :phone, :class => 'control-label' %>
        <%= f.text_field :phone, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :presenter, :class => 'control-label' %>

        <label class="radio-inline">
          <%= f.radio_button :presenter, true %> Yes
        </label>

        <label class="radio-inline">
          <%= f.radio_button :presenter, false %> No
        </label>

      </div>
      <div class="field form-group">
        <%= f.label :allergies, :class => 'control-label' %>
        <%= f.text_field :allergies, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :days_attending, :class => 'control-label' %>
        <%= f.text_field :days_attending, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :housing_needed, :class => 'control-label' %>

        <label class="radio-inline">
          <%= f.radio_button :housing_needed, true %>Yes
        </label>

        <label class="radio-inline">
          <%= f.radio_button :housing_needed, false %>No
        </label>

      </div>
      <div class="field form-group">
        <%= f.label :animal_allergies, :class => 'control-label' %>
        <%= f.text_field :animal_allergies, :class => 'form-control' %>
      </div>

      <div class="field form-group">
        <%= f.label :comfortable_dogs, "I'm comfortable staying with", :class => 'control-label' %>

        <label class="checkbox-inline">
          <%= f.check_box :comfortable_dogs %>Dogs
        </label>

        <label class="checkbox-inline">
          <%= f.check_box :comfortable_cats %>Cats
        </label>

        <label class="checkbox-inline">
          <%= f.check_box :comfortable_kids %>Kids
        </label>

        <label class="checkbox-inline">
          <%= f.check_box :comfortable_smoking %>Smoking
        </label>

      </div>

      <div class="field form-group">
        <%= f.label :housing_residents, :class => 'control-label' %>
        <%= f.select :housing_residents, [ 'Female Resident', 'Male Resident', 'Couple Residents' ], { :prompt => 'Choose Housing Residents' }, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :housing_sleep_situation, 'Preferred Sleeping Arrangements', :class => 'control-label' %>
        <%= f.select :housing_sleep_situation, [ 'No Preference', 'Bed', 'Futon', 'Floor' ], { :prompt => 'Choose Sleep Situation' }, :class => 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.label :additional_information, :class => 'control-label' %>
        <%= f.text_area :additional_information, :class => 'form-control' %>
      </div>
      <div class="actions">
        <%= f.submit 'Register', :class => 'btn btn-primary' %>
      </div>
    </div>
<% end %>
